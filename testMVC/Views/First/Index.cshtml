@model IEnumerable<Person>
@{
    ViewData["Title"] = "Danh sách";
}

<h2>Đây là danh sách nhân vật</h2>
<a asp-action="Create">Create new person</a>
<table style="width:50%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Location</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Person e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Age</td>
                <td>@e.Location</td>
                <td><a asp-action="Update" asp-route-empname="@e.Name">Update</a></td>
                <td>
                    <form asp-route-empname="@e.Name" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
