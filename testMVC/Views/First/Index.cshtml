@model IEnumerable<Person>
@{
    ViewData["Title"] = "Danh sách";
}

<h2>Đây là danh sách nhân vật</h2>

<table style="width:50%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Person e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Age</td>
                <td>@e.Location</td>
            </tr>
        }
    </tbody>
</table>
